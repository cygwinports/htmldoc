}

src_compile() {
	lndirs
	cd ${B}
	autoconf
	CYGCONF_SOURCE=${B} \
	cygconf --enable-ssl --enable-gnutls --disable-openssl
	cygmake
}

USE_DESTDIR=0
DOCS="CHANGES.txt"
